@model List<OnlineTindahan.Models.User>
@{
    ViewBag.Title = "GetAllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <table class="table table-hover">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th></th>
        </tr>

        @foreach(var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.EmailAddress</td>
            <td>@Html.ActionLink("Details", "Details", "Users", user, null)</td>

        </tr>
        }
    </table>
</center>
